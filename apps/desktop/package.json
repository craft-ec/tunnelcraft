{
  "name": "tunnelcraft-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "TunnelCraft Desktop VPN Client",
  "main": "dist/main/index.js",
  "author": {
    "name": "TunnelCraft Team",
    "email": "team@tunnelcraft.app"
  },
  "homepage": "https://tunnelcraft.app",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/craftec/tunnelcraft"
  },
  "scripts": {
    "dev": "npm run build:main && npm run build:preload && concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "build:electron": "electron-builder --config electron-builder.yml",
    "package": "npm run build && npm run build:electron",
    "package:mac": "npm run build && electron-builder --mac --config electron-builder.yml",
    "package:win": "npm run build && electron-builder --win --config electron-builder.yml",
    "package:linux": "npm run build && electron-builder --linux --config electron-builder.yml",
    "package:all": "npm run build && electron-builder -mwl --config electron-builder.yml",
    "publish": "npm run build && electron-builder --publish always --config electron-builder.yml",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  }
}
